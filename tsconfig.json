{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "react-native-coil": ["./src/Coil"]
    }
  },
  "include": ["./src", "./example"],
  "exclude": [
    "node_modules", "babel.config.js"
  ]
}